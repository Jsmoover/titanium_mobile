 DataPlanAlert {
    cancel : 0, 
    persistent:true,
    viewClass:'DataPlanAlertView',
}

#cellularPlanAlert {
    buttonNames : ['Cancel', 'Save'],
    title : 'My Cellular Plan'
}

.DataPlanAlertView {
    width:'95%'
    /*height:Ti.UI.SIZE*/
}

DataPlanView {
    layout:'vertical',
    height:Ti.UI.SIZE,
    left:5,
    right:5
}

.DPInfoLabel {
    top:10,
	left:0,
	textAlign:'left',
    color:'white',
    font: {fontSize : 10}
}

.DPWidget {
	left:0,
	color:'white',
    backgroundColor:'transparent',
    borderColor:'white',
    borderWidth:1,
    height:35,
    paddingLeft:20,
    paddingRight:20,
    textPadding:{left:20, right:20},
    titlePadding:{left:20, right:20},
    font: {fontSize : 12},
    top:5,
    selectedColor:$alertBgColor,
    backgroundSelectedColor:'white'
}

.DPButton {
	color:'white',
    backgroundColor:'transparent',
}

.DPButtonSelected {
	color:$alertBgColor,
    backgroundColor:'white'
}


#dpTypeDesc {
    text: 'Select Plan Type:'
}

#dpExpTF {
	width:80,
	maxLength:2,
	keyboardType:Ti.UI.KEYBOARD_NUMBER_PAD
}

#dpSizeTF {
	width:80,
	keyboardType:Ti.UI.KEYBOARD_NUMBER_PAD
}

#dpStartTF {
	width:Ti.UI.SIZE,
    editable:false,
	format:'L'
}


#dpContractButton {
	width:Ti.UI.FILL,
	title:'Contract/Post Paid'
}

#dpPayButton {
	width:Ti.UI.FILL,
	title:'Pay As You Go/Pre Paid'
}

#dpExpDesc {
	text: 'Days Until Expiration:'
}

#dpStartDesc {
	text: 'Starting Date:'
}

#dpSizeDesc {
	text: 'Select Plan Size:'
}

#dpViewDesc {
	text: 'View In:'
}
